<div class="modal fade bg-dar" role="dialog" id="request_replies_modal">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content  bg-light">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Request Replies</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p><span class="text-primary font-weight-bold">Subject : </span> <span id="request_subject_modal"></span></p>
                <p><span class="text-primary font-weight-bold">Request : </span> <span id="request_content_modal"></span></p>

                <h4>Replies</h4>
                <hr />
                <div id="request_replies">

                    <div class="text-center" id="no-replies-image">
                        <img src="~/img/empty.svg" />
                    </div>
                </div>
                <hr />
                <textarea class="form-control" id="request_reply_content" oninput="onTypingContent(this)" placeholder="Write reply here!"></textarea>
                <button class="btn btn-primary my-2 disabled" onclick="sendRequestReply()" id="send_request_reply_btn">Send <i class="fa fa-spinner fa-spin collapse"></i></button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/HealthRequestRepliesModal.js"></script>